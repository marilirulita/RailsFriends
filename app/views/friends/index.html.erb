<% if user_signed_in? %>
  <table class="table table-hover mt-3">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td>
          <%= link_to friend.name, friend %>
          </td>
          <td><%= friend.phone %></td>
          <td><%= friend.email %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>

  <div class="container mt-3">
    <div class="alert alert-secondary" role="alert">
      <h1>Hello World!</h1>
      <p>This is Mar Bautista.</p>
      <h2>You need to sign in to see your friends list :D ! </h2>
    </div>
  </div>

<% end %>